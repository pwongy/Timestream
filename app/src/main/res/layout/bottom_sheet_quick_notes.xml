<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quick_notes_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    app:layout_scrollFlags="scroll"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <EditText
        android:id="@+id/bottom_sheet_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/bottom_sheet_send_button"
        android:layout_centerVertical="true"
        android:inputType="textCapSentences"
        android:hint="@string/bottom_sheet_add_note_hint"
        android:text=""
        android:textSize="16sp"
        android:focusable="true" />
    <ImageButton
        android:id="@+id/bottom_sheet_send_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:padding="4dp"
        android:src="@drawable/ic_action_send"
        android:background="?android:selectableItemBackground"
        android:focusable="true" />

</RelativeLayout>